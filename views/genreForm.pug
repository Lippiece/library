extends layout

block content
  section.container.d-flex.flex-column.gap-3
    h1 #{title}

    form(method='POST').d-flex.flex-column.gap-2.w-75
      div.form-group
        label(for='name') Genre:
        input#name.form-control(type='text', placeholder='Fantasy, Poetry, etc.' name='name' required minLength=1 maxLength=15 value=(undefined===genre ? '' : genre.name) )
      button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg
